@model CourseCreateViewModel

<div class="container">
    <h1 class="text-center col-md-4 offset-4 text-wrap mb-3">Add New Course</h1>
    <div class="row">
        <div class="col-md-4 offset-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="StartTime" class="control-label"></label>
                    <input asp-for="StartTime" class="form-control" />
                    <span asp-validation-for="StartTime" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <button class="btn btn-primary list-group-item w-100" data-bs-toggle="modal" data-bs-target="#uploadModal">
                        View Attendees
                    </button>
                    
                </div>
                <div class="form-group">
                    <a href="javascript:history.go(-1)" class="btn btn-lg btn-danger float-start">Cancel</a>
                    <input type="submit" value="Add" class="btn btn-lg btn-primary float-end" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="col-5 p-0">
    <div class="modal fade" id="uploadModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <partial name="UploadModulePartialView" model=""/>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}

@model CourseEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>@Model.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" ></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                    <button type="button" class="btn btn-primary list-group-item w-100" data-bs-toggle="modal" data-bs-target="#uploadModal">
                        Add Document
                    </button>

                </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary my-2" />
            </div>
            <div class="col-5 p-0">
                    <div class="modal fade" id="uploadModal" tabindex="-1">
                        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                            <div class="modal-content">
                                <div>
                                    <label asp-for="Document" class="control-label"></label>
                                    <input asp-for="Document" type="file" class="form-control" />
                                </div>
                                <div>
                                    <label asp-for="DocumentDescription" class="control-label"></label>
                                    <input asp-for="DocumentDescription" type="text" class="form-control" />
                                </div>
                                <button type="button" data-bs-toggle="modal" data-bs-target="#uploadModal">Close</button>
                                <input type="submit" value="Done" />
                            </div>
                        </div>
                    </div>
                </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

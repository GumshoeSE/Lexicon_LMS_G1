@model Lexicon_LMS_G1.Models.StudentViewCourseViewModel
@inject ITimeLeftSevice timeleft
@{
    ViewData["Title"] = @Html.DisplayFor(m => m.Name);
}
@*<div class="  fs-1">*@
<h1 class="pb-3 text-center "><a class="btn btn-light fs-1 border border-2" data-bs-toggle="modal" data-bs-target="#description"> @Html.DisplayFor(m => m.Name) <i class="fa-solid fa-circle-info fa-bounce"></i> </a></h1>
@*</div>*@

<div class="container">
    <div class="row">
        <div class="border rounded col-6 p-0 bg-light">
            <h2 class="px-3 text-center"> Assignments </h2>
            <h5 class="px-3">Late Assignments</h5>
            <div class="accordion" id="lateAssignments">
                @foreach (var assignment in Model!.LateAssignments)
                {
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="@($"heading")@Html.DisplayFor(a => assignment.Id)">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="@($"#collapse")@Html.DisplayFor(a => assignment.Id)">
                                @Html.DisplayFor(a => assignment.Name)
                                <p>Due to @Html.DisplayFor(a => assignment.EndDate)</p>
                            </button>
                        </h2>
                        <div class="accordion-collapse collapse" id="@($"collapse")@Html.DisplayFor(a => assignment.Id)" data-bs-parent="#lateAssignments">
                            <div class="accordion-body">
                                @Html.DisplayFor(a => assignment.Description) <i class="fa-solid fa-circle-info"></i>

                                <button class="btn btn-info uploadAssignment" value="@(assignment.Id)" data-bs-toggle="modal" data-bs-target="#uploadModal" id="uploadAssignment@(assignment.Id)" data-activity-id="@(assignment.Id)">
                                    +
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <h5 class="px-3">Upcomming</h5>
            <div class="accordion" id="assignments">
                @foreach (var assignment in Model!.UpcomingAssignments)
                {
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="@($"heading")@Html.DisplayFor(a => assignment.Id)">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="@($"#collapse")@Html.DisplayFor(a => assignment.Id)">
                                <div>
                                    <div class="pb-1 fs-5"> @Html.DisplayFor(a => assignment.Name)</div>
                                    <div><strong>Time Left:</strong> @timeleft.GetTimeLeft(@assignment.EndDate)</div>
                                </div>
                            </button>
                        </h2>
                        <div class="accordion-collapse collapse" id="@($"collapse")@Html.DisplayFor(a => assignment.Id)" data-bs-parent="#assignments">
                            <div class="accordion-body">
                                <div>
                                @Html.DisplayFor(a => assignment.Description)
                                </div>
                                <button class="btn btn-info uploadAssignment" value="@(assignment.Id)" data-bs-toggle="modal" data-bs-target="#uploadModal" id="uploadAssignment@(assignment.Id)" data-activity-id="@(assignment.Id)">
                                    +
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <h5 class="px-3">Finished</h5>
            <div class="accordion" id="finishedAssignments">
                @foreach (var assignment in Model!.FinishedAssignments)
                {
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="@($"heading")@Html.DisplayFor(a => assignment.Id)">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="@($"#collapse")@Html.DisplayFor(a => assignment.Id)">
                                @Html.DisplayFor(a => assignment.Name)

                            </button>
                        </h2>
                        <div class="accordion-collapse collapse" id="@($"collapse")@Html.DisplayFor(a => assignment.Id)" data-bs-parent="#assignments">
                            <div class="accordion-body">
                                @Html.DisplayFor(a => assignment.Description)
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="col-5 offset-1 border rounded p-0 bg-light d-flex flex-column" id="modules">
            <div class="mb-auto">
                <nav id="modulesNavBar" class="px-3 py-2" style="--bs-breadcrumb-divider: '>';">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item active" id="breadcrumbModule" style="cursor: pointer" data-course="@Model.Id">
                            Modules
                        </li>
                        <li class="breadcrumb-item hidden" id="breadcrumbActivity" style="cursor: pointer">
                            Activities
                        </li>
                        <li class="breadcrumb-item hidden" id="breadcrumbDetail" style="cursor: pointer">
                            Details
                        </li>
                    </ol>
                </nav>
                <div id="moduleview" class="overflow-auto">

                    <partial name="ModulePartialView" model="@Model.Modules" />
                </div>

            </div>
            <div class="">
                <button class="btn btn-primary list-group-item w-100" data-bs-toggle="modal" data-bs-target="#attendeesModal">
                    View Attendees
                </button>

            </div>
        </div>

    </div>
    <div class="row justify-content-end ">
        <div class="col-5 p-0" id="attendeesButton">

            <div class="modal fade" id="attendeesModal" tabindex="-1">
                <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h2 class="modal-title">
                                Attendees
                            </h2>
                            <button class="btn-close" data-bs-dismiss="modal">
                            </button>
                        </div>
                        <div class="modal-body">
                            <ul class="list-group">
                                @foreach (var attendee in Model!.OrderedAttendees)
                                {
                                    <li class="list-group-item">
                                        @Html.DisplayFor(a => attendee.FirstName)
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal" id="description" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Html.DisplayFor(c =>c.Name)</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h6>Description</h6>
                <p>@Html.DisplayFor(c => c.Description)</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
    <div class="col-5 p-0">
        <div class="modal fade" id="uploadModal" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                <div class="modal-content">
                    <form asp-action="UploadStudentDocument" enctype="multipart/form-data" asp-controller="Documents">
                        <div>
                            <label class="control-label">UPLOLOAD FILÈ</label>
                            <input name="document" type="file" class="form-control" required />
                        </div>
                        <div>
                            <label class="control-label">DESCRPTION</label>
                            <input name="description" type="text" class="form-control" />
                        </div>
                        <div class="hidden">
                            <label class="control-label">Don't look, I'm dressing!</label>
                            <input id="-R��������Ξft" name="activityId" type="number" value="0" class="form-control" />
                        </div>

                        <button type="submit" class="btn btn-primary">Upload File</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
<script src="~/js/index-student.js"></script>
}
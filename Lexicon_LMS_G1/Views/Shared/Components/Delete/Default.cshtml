@model DeleteViewModel

<div class="modal" tabindex="-1" id="@(Model.DeleteModalId)">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-center"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <p class="fs-5">This action can not be reversed!</p>
            </div>
            <div class="modal-footer text-center">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">No take me back!</button>
                <form asp-action="Delete" asp-controller="@Model.DeleteController">
                    <input type="hidden" asp-for="ReturnController" />
                    <input type="hidden" asp-for="ReturnAction" />
                    <input type="hidden" asp-for="ReturnId" />
                    <input type="hidden" name="DeleteId" value="" id="@(Model.DeleteModalId.Replace("Modal", "Id"))" />
                    <input type="submit" value="Yes, i'm sure!" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</div>



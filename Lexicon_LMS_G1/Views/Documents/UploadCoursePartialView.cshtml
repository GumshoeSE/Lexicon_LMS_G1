@model DocumentUploadViewModel<int, Lexicon_LMS_G1.Entities.Entities.Course>

<h1>Course</h1>
<form asp-action="UploadCourseDocument" enctype="multipart/form-data" asp-controller="Documents">
    <div>
        <label asp-for="Document" class="control-label"></label>
        <input asp-for="Document" name="document" type="file" class="form-control" required />
    </div>
    <div>
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" name="description" type="text" class="form-control" />
    </div>
    <div>
        <label asp-for="Identifier" class="control-label"></label>
        <select asp-for="Identifier" name="courseId" class="form-select">
            @foreach (var item in Model.Identifier)
            {
                <option value="@item.Id"> @item.Name </option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Upload File</button>
</form>